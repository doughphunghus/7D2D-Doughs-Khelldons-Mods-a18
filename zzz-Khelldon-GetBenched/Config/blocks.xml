<!-- 
Khelldon - Workbench Tweaks
-->

<!-- Recipes Shown in Workbench - remove player crefting items from workbench list. -->
<set xpath="/blocks/block[@name='workbench']/property[@class='Workstation']/property[@name='CraftingAreaRecipes']/@value">workbench</set>

<!-- Pick up workbench when destroyed - Since the workbench is so important we want to let players pick it up -->
<remove xpath="/blocks/block[@name='workbench']/drop[@event='Destroy']"/>
<insertBefore xpath="/blocks/block[@name='workbench']/drop[@event='Fall']">
    <drop event="Destroy" name="workbench" count="1"/>
</insertBefore>

<!-- change workbench health - originally 800hp too much to easily destroy -->
<set xpath="/blocks/block[@name='workbench']/property[@name='MaxDamage']/@value">200</set>

<!-- Set Crafting Groups for workbench, we'll assign it to all groups to make sure it's obvious you need it for everything -->
<set xpath="/blocks/block[@name='workbench']/property[@name='Group']/@value">Basics,Building,Science,Decor/Miscellaneous,Ammo/Weapons,Tools/Traps,Resources,Chemicals,Clothing</set>

<!-- Remove destroy bonus mats for workbench, this will stop players from getting unlimited mats by destroying the workbench and placing it loop. -->
<remove xpath="/blocks/block[@name='workbench']/drop[@name='resourceScrapIron']"/>
<remove xpath="/blocks/block[@name='workbench']/drop[@name='resourceWood']"/>
<remove xpath="/blocks/block[@name='workbench']/drop[@name='terrStone']"/>
<remove xpath="/blocks/block[@name='workbench']/drop[@name='resourceForgedIron']"/>
<remove xpath="/blocks/block[@name='workbench']/drop[@name='resourceMechanicalParts']"/>

