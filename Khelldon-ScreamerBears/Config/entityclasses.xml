  <drop event="Harvest" name="resourceLeather" tag="butcherHarvest" count="15"/>
  <drop event="Harvest" name="resourceAnimalFat" tag="butcherHarvest" count="7"/>
  <drop event="Harvest" name="resourceBone" tag="butcherHarvest" count="5"/>
